<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editProfileTextView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.fragment.SettingFragment">

    <ImageView
        android:id="@+id/settingProfileImage"
        android:layout_width="86dp"
        android:layout_height="76dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="163dp"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="148dp"
        android:text="Kiara Advani"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingProfileImage" />

    <TextView
        android:id="@+id/userEmail"
        android:layout_width="170dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="120dp"
        android:text="kiaraadvani12@gmail.com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameSetting" />

    <androidx.cardview.widget.CardView
        android:id="@+id/editProfileCardView"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userEmail">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/editProfileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/message_border"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:id="@+id/editImage"
                android:layout_width="34dp"
                android:layout_height="39dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/baseline_edit_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/profileTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:text="Edit Profile"
                android:textColor="@color/endpink"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/editImage"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/profileArrowImage"
                android:layout_width="53dp"
                android:layout_height="37dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/baseline_arrow_right_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/themeCardView"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editProfileCardView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/themeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/message_border"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:id="@+id/themeImage"
                android:layout_width="34dp"
                android:layout_height="39dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/baseline_edit_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/themeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:text="Theme"
                android:textSize="20dp"
                android:textColor="@color/endpink"
                app:layout_constraintStart_toEndOf="@+id/themeImage"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/themeArrowImage"
                android:layout_width="53dp"
                android:layout_height="37dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/baseline_arrow_right_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/termsCardView"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/themeCardView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/termsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/message_border"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:id="@+id/termsImage"
                android:layout_width="34dp"
                android:layout_height="39dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/baseline_edit_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/termsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:text="Terms And Conditions"
                android:textSize="20dp"
                android:textColor="@color/endpink"
                app:layout_constraintStart_toEndOf="@+id/termsImage"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/termsArrowImage"
                android:layout_width="53dp"
                android:layout_height="37dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/baseline_arrow_right_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/feedbackCardView"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/termsCardView">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/feedbackLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/message_border"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:id="@+id/feedbackImage"
                android:layout_width="34dp"
                android:layout_height="39dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/baseline_edit_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/feedbackTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:text="Report And Feedback"
                android:textSize="20dp"
                android:textColor="@color/endpink"
                app:layout_constraintStart_toEndOf="@+id/feedbackImage"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/feedbackArrowImage"
                android:layout_width="53dp"
                android:layout_height="37dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/baseline_arrow_right_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="347dp"
        android:layout_height="56dp"
        android:layout_marginStart="163dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="160dp"
        android:background="@drawable/gradient"
        android:text="Logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feedbackCardView" />


</androidx.constraintlayout.widget.ConstraintLayout>