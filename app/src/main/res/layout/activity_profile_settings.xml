<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F1216">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_margin="1dp"
                android:src="@drawable/sampleperson1"
                android:background="@drawable/bottom_rounded_shape"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <!-- Name -->

            <Button
                android:id="@+id/change_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_image"
                android:layout_centerHorizontal="true"
                android:text="Change Image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_image" />

            <EditText
                android:id="@+id/name_edit"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/button_bg"
                android:hint="Enter name..."
                android:paddingLeft="5dp"
                android:text="@string/name"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/change_image_button" />

            <!-- Username -->
            <EditText
                android:id="@+id/username_edit"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/button_bg"
                android:hint="Enter profession..."
                android:text="@string/profession"
                android:paddingLeft="5dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/name_edit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- About Section -->
            <TextView
                android:id="@+id/about_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="About"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/username_edit"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/about_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/button_bg"
                android:hint="Write something about yourself..."
                android:text="@string/Bio"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/about_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Interests Section -->
            <TextView
                android:id="@+id/interests_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="20dp"
                android:text="Interests"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/about_edit"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/select_interest_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Please select at least 3 of the following interests"
                android:textColor="#BDBDBD"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/interests_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <GridLayout
                android:id="@+id/interests_grid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:columnCount="3"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/select_interest_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Add CheckBoxes for Interests -->
                <CheckBox android:id="@+id/checkbox_movie" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸŽ¥ Movie" />
                <CheckBox android:id="@+id/checkbox_snooker" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸŽ± Snooker" />
                <CheckBox android:id="@+id/checkbox_books_reading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ“š Books Reading" />
                <CheckBox android:id="@+id/checkbox_swimming" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸŠ Swimming" />
                <CheckBox android:id="@+id/checkbox_design" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸŽ¨ Design" />
                <CheckBox android:id="@+id/checkbox_photography" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ“¸ Photography" />
                <CheckBox android:id="@+id/checkbox_music" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸŽµ Music" />
                <CheckBox android:id="@+id/checkbox_shopping" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ›ï¸ Shopping" />
                <CheckBox android:id="@+id/checkbox_cooking" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ³ Cooking" />
                <CheckBox android:id="@+id/checkbox_art" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ–Œï¸ Art" />
                <CheckBox android:id="@+id/checkbox_traveling" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="âœˆï¸ Traveling" />
                <CheckBox android:id="@+id/checkbox_gaming" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸŽ® Gaming" />

            </GridLayout>

            <!-- Gallery Section -->
            <TextView
                android:id="@+id/gallery_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="20dp"
                android:text="Edit Gallery"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/interests_grid"
                app:layout_constraintStart_toStartOf="parent" />

            <GridLayout
                android:id="@+id/gallery_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:columnCount="3"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/gallery_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Select Images Button -->
            <Button
                android:id="@+id/select_images_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/button_bg"
                android:text="Select Images"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/gallery_grid"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Save Profile Button -->
            <Button
                android:id="@+id/save_profile_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/gradient"
                android:text="Save Profile"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/select_images_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
